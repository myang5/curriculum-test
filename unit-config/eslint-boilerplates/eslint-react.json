{
  "env": {
    "browser": true
  },
  "plugins": ["import", "react", "jsx-a11y"],
  "extends": [
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off",
    "react/jsx-key": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": "webpack"
  }
}
